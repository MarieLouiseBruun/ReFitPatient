            <Grid Grid.Row="2">


                <TextBlock Text="CPR"
                           Foreground="Black"
                           FontSize="15"
                           FontWeight="Medium"
                           FontFamily="Fonts/#Dosis"
                           TextWrapping="Wrap"
                           Margin="30,40,130,215"/>

                <TextBox x:Name="cprTB" 
                         HorizontalAlignment="Left" 
                         Height="26" 
                         FontSize="16"
                         FontWeight="Medium"
                         FontFamily="Fonts/#Dosis"
                         TextWrapping="Wrap" 
                         Width="200" 
                         GotFocus="cprTB_GotFocus"
                         Margin="30,50,0,184"/>

                <TextBlock Text="Password"
                           Foreground="Black"
                           FontSize="15"
                           FontWeight="Medium"
                           FontFamily="Fonts/#Dosis"
                           TextWrapping="Wrap"
                           Margin="30,100,130,148"/>

                <PasswordBox x:Name="pwPB" 
                             HorizontalAlignment="Left" 
                             VerticalAlignment="Top" 
                             Width="200" 
                             Height="26" 
                             PasswordChanged="pwPB_PasswordChanged"
                             Margin="30,120,0,0" />

                <TextBox x:Name="pwTB" 
                         HorizontalAlignment="Left" 
                         Height="26" 
                         TextWrapping="Wrap" 
                         VerticalAlignment="Top" 
                         Margin="30,120,0,0"
                         Width="200"/>

                <Button x:Name="loginB" Content="Login"  
                        Click="loginB_Click"
                        Foreground="White"
                        FontSize="14"
                        FontWeight="Medium"
                        HorizontalAlignment="Left"
                        Margin="30,156,0,66">

                    <Button.Style>
                        <Style TargetType="Button">
                            <Setter Property="TextElement.FontFamily" Value="Fonts/#Dosis"/>
                            <Setter Property="Background" Value="#FF2E4F7B"/>
                            <Setter Property="Cursor" Value="Hand"/>
                            <Style.Triggers>
                                <Trigger Property="IsMouseOver" Value="True">
                                    <Setter Property="Background" Value="#FF1D2F47"/>
                                </Trigger>
                            </Style.Triggers>
                        </Style>
                    </Button.Style>

                    <Button.Template>
                        <ControlTemplate TargetType="Button">
                            <Border Width="115" Height="27"
                                    CornerRadius="12"
                                    Background="{TemplateBinding Background}">
                                <ContentPresenter VerticalAlignment="Center"
                                                  HorizontalAlignment="Center"/>
                            </Border>
                        </ControlTemplate>
                    </Button.Template>

                </Button>
                <Image x:Name="ShowHideImg" 
                       Margin="320,114,140,122" 
                       Stretch="Fill"
                       Source="/Images/Show.JPG" 
                       MouseDown="ShowHideImg_MouseDown" 
                       RenderTransformOrigin="1.207,0.275"/>


            </Grid>



