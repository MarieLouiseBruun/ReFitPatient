        xmlns:local="clr-namespace:ReFitPatientCore"
        mc:Ignorable="d"
        Title="LoginWindow" 
        Height="530" 
        Width="265" 
        FontSize="16"
        WindowStyle="None"
        ResizeMode="NoResize"
        Background="#FFCEDCE2"
        MouseDown="LoginWindow_OnMouseDown">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="140"/>
            <RowDefinition/>
        </Grid.RowDefinitions>

        <Grid Row="0">
            <Image x:Name="LogoImage" 
                   Margin="45,0,45,0" 
                   Stretch="Fill"
                   Source="/Images/Logo.jpg"/> 
                   
            </Grid>

        <Grid Row="1">
            <Grid.RowDefinitions>
                <RowDefinition Height="100"/>
