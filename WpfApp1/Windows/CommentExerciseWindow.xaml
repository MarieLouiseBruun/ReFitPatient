<Window x:Class="ReFitPatientCore.CommentExerciseWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ReFitPatientCore"
        mc:Ignorable="d"
        Title="CommentExerciseWindow" Height="240" Width="265" FontSize="16">
    <Grid Background="CadetBlue">
        <StackPanel Grid.ColumnSpan="2" Margin="0,0,0,0">
            <Label x:Name="kommentarL" Content="Kommentar til øvelse:" HorizontalAlignment="Center" Margin="0,5,0,0"/>
            <TextBox x:Name="kommentarTB" Width="250" Height="125" TextWrapping="Wrap" />
            <StackPanel Orientation="Horizontal">
                <Button x:Name="gemB" Content="Gem" Width="80" Margin="30,15,0,0" Click="gemB_Click"/>

                <Button x:Name="annullerB" Content="Annuller" Width="80" Margin="30,15,0,0" Click="annullerB_Click"/>
            </StackPanel>
        </StackPanel>
    </Grid>
</Window>
