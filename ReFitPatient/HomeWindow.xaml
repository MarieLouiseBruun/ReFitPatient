<Window x:Class="ReFitPatient.HomeWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ReFitPatient"
        mc:Ignorable="d"
        Title="HomeWindow"  Height="530" Width="265" FontSize="16">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>

        <StackPanel Grid.ColumnSpan="2" Margin="0,0,0,0">
            <Image Source="Images/Billede1.png" Height="120" Margin="0,0,10,0"/>
            <TextBlock x:Name="welcomeL" Text="" TextWrapping="Wrap"  Width="auto" HorizontalAlignment="Center" TextAlignment="Center" Margin="0,20,0,0"/>
            <Button x:Name="viewExercisesB" Content="Se øvelser" Width="160" Height="40" Margin="0,20,0,0" Click="viewExercisesB_Click"/>
            <Button x:Name="journalB" Content="Dagbog" Width="160" Height="40" Margin="0,20,0,0" Click="journalB_Click"/>
            <Button x:Name="intervalB" Content="Skift dagsinterval" Width="160" Height="40" Margin="0,20,0,0" Click="intervalB_Click"/>
            <Button x:Name="logoutB" Content="Log ud" Width="160" Height="40" Margin="0,20,0,0" Click="logoutB_Click"/>


        </StackPanel>
    </Grid>
</Window>
